{{#each dossiers}}
    <div class="card card-body">
        <h4>{{title}}</h4>
        <p class="lead">{{details}}</p>
        <a href="/dossiers/edit/{{id}}" class="btn btn-dark btn-block mb-2">Edit</a>
        <form action="/dossiers/{{id}}?_method=DELETE" method="post">
            <input type="hidden" name="_method" value="DELETE">
            <input type="submit" class="btn btn-danger btn-block" value="Delete">
        </form>
    </div>

{{else}}
{{/each}}